<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/order"
    android:layout_margin="@dimen/_3sdp"
    android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

    <TextView
    android:id="@+id/Tv_pname"
    android:text="Name  :"
        android:textSize="@dimen/_15sdp"
    android:textColor="@color/blue"
    android:padding="@dimen/_3sdp"
    android:layout_width="@dimen/_59sdp"
    android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/Tv_pnamed"
                android:text="name:"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/blue"
                android:padding="@dimen/_3sdp"
                android:layout_toRightOf="@+id/Tv_pname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="@dimen/_59sdp"
                android:id="@+id/Tv_pprice"
                android:text="Price   :"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/blue"
                android:padding="@dimen/_3sdp"
                android:layout_below="@+id/Tv_pname"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/Tv_ppriced"
                android:text="p:"
                android:textColor="@color/blue"
                android:padding="@dimen/_3sdp"
                android:textSize="@dimen/_15sdp"
                android:layout_below="@+id/Tv_pnamed"
                android:layout_toRightOf="@+id/Tv_pprice"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/Tv_pdeletebtn"
                android:layout_below="@+id/Tv_pnamed"
                android:gravity="center"
                android:text="Delete"
                android:textColor="@color/white"
                android:background="@color/red"
                android:layout_marginLeft="@dimen/_140sdp"
                android:layout_toRightOf="@+id/Tv_ppriced"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/Tv_pquntity"
                android:text="QTY:"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/blue"
                android:padding="@dimen/_3sdp"
                android:layout_below="@+id/Tv_pprice"
                android:layout_width="@dimen/_59sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/Tv_pquntityd"
                android:text="9"
                android:textColor="@color/blue"
                android:padding="@dimen/_3sdp"
                android:textSize="@dimen/_15sdp"
                android:layout_toRightOf="@+id/Tv_pquntity"
                android:layout_below="@+id/Tv_ppriced"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/Sp_uquntity"
                android:layout_below="@+id/Tv_ppriced"
                android:layout_toRightOf="@+id/Tv_pquntityd"
                android:layout_width="@dimen/_80sdp"
                android:spinnerMode="dropdown"
                android:popupBackground="@color/blue"
                android:padding="@dimen/_3sdp"
                android:paddingTop="@dimen/_5sdp"
                android:entries="@array/spinner_item"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/Tv_pupdatebtn"
                android:gravity="center"
                android:text="update"
                android:background="@color/red"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_80sdp"
                android:layout_below="@+id/Tv_ppriced"
                android:layout_toRightOf="@+id/Sp_uquntity"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/Im_procart"
                android:layout_toRightOf="@+id/Tv_ppriced"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_23sdp"
                android:src="@drawable/partyweartl"
                android:adjustViewBounds="true"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_50sdp"/>
        </RelativeLayout>


</LinearLayout>


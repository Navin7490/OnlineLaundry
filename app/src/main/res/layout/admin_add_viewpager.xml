<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp">
        <TextView
            android:text="Add Slider"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textStyle="bold"
            android:id="@+id/delet"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_16sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Img_category"
            android:layout_below="@+id/delet"
            android:layout_marginStart="@dimen/_80sdp"
            android:layout_width="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/clothclean"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginLeft="@dimen/_120sdp" />
        <TextView
            android:layout_below="@+id/Img_category"
            android:layout_marginStart="@dimen/_90sdp"
            android:text="Add Photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_90sdp" />
        <EditText
            android:id="@+id/Et_Category"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/_50sdp"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            android:layout_below="@+id/Img_category"
            android:layout_marginTop="@dimen/_20sdp"
            android:hint="Enter Category Name"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/Btn_Cancel"
            android:text="Cancel"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_below="@+id/Et_Category"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_width="wrap_content"
            android:background="@color/red"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/Btn_Add"
            android:text="Add"
            android:background="@color/green"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_below="@+id/Et_Category"
            android:layout_marginLeft="@dimen/_130sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_150sdp"
        android:elevation="@dimen/_60sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="center"
            android:layout_marginLeft="@dimen/_22sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ImViCategory"
                android:src="@drawable/clothclean"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"/>
            <TextView
                android:id="@+id/Tv_cateName"
                android:text="Woman"
                android:textSize="@dimen/_15sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/ImViCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/Tv_cateEdit"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Tv_cateName"
                android:background="@drawable/icaedit" />
            <TextView
                android:id="@+id/Tv_cateDelete"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_85sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Tv_cateName"
                android:background="@drawable/icadelete" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
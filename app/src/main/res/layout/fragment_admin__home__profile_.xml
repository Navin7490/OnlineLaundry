<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin_Home_Profile_Fragment">
    <View
        android:id="@+id/image"
        android:background="@drawable/clothclean"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"/>
   <RelativeLayout
       android:layout_below="@+id/image"
       android:layout_width="match_parent"
       android:layout_marginTop="-50dp"
       android:layout_marginLeft="@dimen/_5sdp"
       android:layout_marginRight="@dimen/_5sdp"
       android:layout_height="wrap_content">

       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/Im_A_Profile"
           android:src="@drawable/llehenga"
           android:layout_marginLeft="@dimen/_10sdp"
           android:layout_marginTop="@dimen/_20sdp"
           android:layout_width="@dimen/_50sdp"
           android:layout_height="@dimen/_50sdp"/>
       <TextView
           android:id="@+id/Tv_A_ProfiName"
           android:layout_below="@+id/Im_A_Profile"
           android:layout_width="match_parent"
           android:layout_marginTop="@dimen/_5sdp"
           android:text="Adminkumr"
           android:padding="@dimen/_5sdp"
           android:textColor="@color/black"
           android:layout_height="wrap_content"/>
       <TextView
           android:id="@+id/Tv_A_ProfiEmail"
           android:padding="@dimen/_5sdp"
           android:layout_below="@+id/Tv_A_ProfiName"
           android:layout_width="match_parent"
           android:layout_marginTop="@dimen/_5sdp"
           android:text="admin108@gmail.com"
           android:textColor="@color/black"
           android:layout_height="wrap_content"/>
       <Button
           android:id="@+id/Btn_A_ProfiLogout"
           android:text="logout"
           android:background="@color/white"
           android:layout_alignParentBottom="true"
           android:layout_width="@dimen/_150sdp"
           android:layout_height="wrap_content"/>
       <Button
           android:id="@+id/Btn_A_ProfiUpdate"
           android:text="update"
           android:background="@color/white"
           android:layout_alignParentBottom="true"
           android:layout_width="@dimen/_150sdp"
           android:layout_alignParentRight="true"
           android:layout_height="wrap_content"/>
   </RelativeLayout>

</RelativeLayout>